#powerTip
	background-color: #333
	background-color: #111
	border-radius: 2px
	color: #fff
	cursor: default
	display: none
	font-family: 'Open Sans', Helvetica, Arial, sans-serif
	font-size: .6em
	font-weight: 400
	padding: 4px
	position: absolute
	text-transform: uppercase
	white-space: nowrap
	letter-spacing: 1px
	z-index: 2147483647
	
	&:before
		content: ''
		position: absolute
	
	&.n:before
	&.s:before
		border-right: 5px solid transparent
		border-left: 5px solid transparent
		left: 50%
		margin-left: -5px
	
	&.e:before
	&.w:before
		border-bottom: 6px solid transparent
		border-top: 6px solid transparent
		margin-top: -6px
		top: 50%
	
	&.n:before
		border-top: 10px solid #333
		border-top: 10px solid #111
		bottom: -10px
		
	&.e:before
		border-right: 10px solid #333
		border-right: 10px solid #111
		left: -10px
		
	&.s:before
		border-bottom: 10px solid #333
		border-bottom: 10px solid #111
		top: -10px
		
	&.w:before
		border-left: 6px solid #333
		border-left: 6px solid #111
		right: -6px
	
	&.ne:before
	&.se:before
		border-right: 10px solid transparent
		border-left: 0
		left: 10px
		
	&.nw:before
	&.sw:before
		border-left: 10px solid transparent
		border-right: 0
		right: 10px

	&.ne:before
	&.nw:before
		border-top: 10px solid #333
		border-top: 10px solid #111
		bottom: -10px

	&.se:before
	&.sw:before
		border-bottom: 10px solid #333
		border-bottom: 10px solid #111
		top: -10px

	&.nw-alt:before
	&.ne-alt:before
	&.sw-alt:before
	&.se-alt:before
		border-top: 10px solid #333
		border-top: 10px solid #111
		bottom: -10px
		border-left: 5px solid transparent
		border-right: 5px solid transparent
		left: 10px

	&.ne-alt:before
		left: auto
		right: 10px

	&.sw-alt:before
	&.se-alt:before
		border-top: none
		border-bottom: 10px solid #333
		border-bottom: 10px solid #111
		bottom: auto
		top: -10px

	&.se-alt:before
		left: auto
		right: 10px
